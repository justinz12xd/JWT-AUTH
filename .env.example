# Application
NODE_ENV=development
PORT=8090

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=auth_db

# JWT Secrets
# IMPORTANTE: ACCESS_TOKEN_SECRET debe ser el mismo que JWT_SECRET en el API Gateway
# Esto permite la validaci√≥n LOCAL de tokens sin llamadas HTTP
ACCESS_TOKEN_SECRET=your-shared-jwt-secret-with-api-gateway
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production

# Token Expiration
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=*
